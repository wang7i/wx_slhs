/**index.wxss**/
page {
    background: #fbfbfb;
    padding-bottom: 70rpx;
}
.container {
    padding: 0 30rpx;
    box-sizing: border-box;
}
.container > view:first-child image {
    height: 500rpx;
    width: 100%;
}
.nav {
    width: 650rpx;
    margin: 0 auto;
    padding: 56rpx 0 77rpx;
    /* position: relative; */
}
.nav > view{
    display: flex;
    justify-content: space-between;
    font-weight: bold;
    font-size: 30rpx;
}
.nav > view:first-child view {
    padding: 20rpx 0;
}
.border {
    border: 4rpx solid #509BE5;
    border-top-right-radius: 15rpx;
    border-top-left-radius: 15rpx;
    border-bottom-right-radius: 15rpx;
    border-bottom-left-radius: 15rpx;
    position: absolute;
    /* bottom: 40rpx; */
    transition: all .35s ease-in-out;
    /* margin-top: 30rpx; */
}
.list {
    font-size: 32rpx;
}
.list image {
    width: 100%;
    height: 500rpx;
    margin-bottom: 20rpx;
}
.list > view:last-child {
    font-size: 26rpx;
    color: #666;
    margin: 20rpx 0 30rpx;
}
