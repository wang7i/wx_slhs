/* pages/people/people.wxss */
page {
    background: #F8F8F8;
}
.container {
    background: #fff;
}
checkbox .wx-checkbox-input{
   border-radius: 50%;
   width: 35rpx;
   height: 35rpx;
   border: 2px solid #333333;
}
checkbox .wx-checkbox-input.wx-checkbox-input-checked::before{
   border-radius: 50%;
   width: 40rpx;
   height: 40rpx;
   line-height: 40rpx;
   text-align: center;
   font-size:30rpx;
   color:#333;
   background: transparent;
   transform:translate(-50%, -50%) scale(1);
   -webkit-transform:translate(-50%, -50%) scale(1);
}
.container > view:first-child {
    text-align: right;
    padding: 20rpx 30rpx 20rpx 0;
    border-bottom: 1px solid #e8e8e8;
}
.jia {
    text-align: center;
    font-size: 32rpx;
    border-bottom: 3px solid #e8e8e8;
    padding: 30rpx 0;
}
.jia text {
    display: inline-block;
    margin-right: 10rpx;
    border: 2px solid #333;
    border-radius: 50%;
    width: 30rpx;
    height: 30rpx;
    vertical-align: middle;
    line-height: 25rpx;
    text-align: left;
    font-weight: bold;
}
.list {
    padding: 30rpx;
    border-bottom: 1px solid #e8e8e8;
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 32rpx;
}
.list image {
    width: 20rpx;
    height: 30rpx;
}
.list > view:first-child {
    display: flex;
    align-items: center;
}
.man {
    margin-left: 40rpx;
}
.man > view:last-child {
    font-size: 28rpx;
    color: #c6c6c6;
    margin-top: 10rpx;
}
.add > view{
    padding: 30rpx;
    display: flex;
    border-bottom: 1px solid #e8e8e8;

}
.add input {
    flex: 1;
    margin-left: 70rpx;
    font-size: 30rpx;
}
.add > view > view:first-child {
    width: 180rpx;
    font-size: 30rpx;
}
.zan-toptips {
    background-color:#e64340;
}